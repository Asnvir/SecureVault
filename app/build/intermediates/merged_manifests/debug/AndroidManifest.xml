<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mutex"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="33" />

    <permission
        android:name="com.example.mutex.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.mutex.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SecureVault" >
        <activity
            android:name="com.example.mutex.ViewCredentialActivity"
            android:label="View Credentials"
            android:noHistory="true"
            android:parentActivityName="com.example.mutex.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.example.mutex.AddCredentialActivity"
            android:label="Add Credentials"
            android:noHistory="true"
            android:parentActivityName="com.example.mutex.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mutex.AccountSettingsActivity"
            android:label="Account Settings"
            android:noHistory="true"
            android:parentActivityName="com.example.mutex.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <!-- <activity -->
        <!-- android:name=".AboutActivity" -->
        <!-- android:label="About" -->
        <!-- android:noHistory="true" -->
        <!-- android:parentActivityName=".MainActivity" -->
        <!-- android:screenOrientation="portrait" /> -->
        <activity
            android:name="com.example.mutex.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mutex.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mutex.RegisterActivity"
            android:label="Registration"
            android:noHistory="true"
            android:parentActivityName="com.example.mutex.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mutex.PinActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.mutex.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>